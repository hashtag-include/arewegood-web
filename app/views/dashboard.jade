extends layout
block title
  | arewegood | monitoring and exception handling for apps that matter

block page-content
    .page-content-wrapper
        .page-content
            h1.page-title Dashboard
            each repository in user.repositories
                .col-md-6
                    .portlet.light.bordered
                        .portlet-title.tabbable-line
                            .caption
                                a(href='/#{repository.fullName}')
                                    | #{repository.fullName}
                            ul.nav.nav-tabs
                                li.active
                                    a(href='##{repository._id}_day' data-toggle='tab')
                                        | Day
                                li
                                    a(href='##{repository._id}_week' data-toggle='tab')
                                        | Week
                                li
                                    a(href='##{repository._id}_month' data-toggle='tab')
                                        | Month
                        .portlet-body
                            .tab-content
                                .tab-pane.active(id='#{repository._id}_day')
